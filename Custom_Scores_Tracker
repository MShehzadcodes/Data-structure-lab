#include <iostream>
#include <cstdlib>
using namespace std;

int main() {
    
    cout << "Hello! Welcome to the Score Management System" << endl;
    
    int totalPlayers;
    
    cout << "Please input the total number of players: ";
    cin >> totalPlayers;
    
    int *scoreList = (int*) malloc(totalPlayers * sizeof(int));
    
    if (scoreList == NULL) {
        cout << "Error! Memory allocation unsuccessful." << endl;
        return 1;
    }
    
    for (int i = 0; i < totalPlayers; i++) {
        cout << "Input score for Player #" << (i + 1) << ": ";
        cin >> scoreList[i];
    }
    
    cout << "\nPLAYER SCORES SUMMARY" << endl;
    for (int i = 0; i < totalPlayers; i++) {
        cout << "Player " << (i + 1) << " has a score of: " << scoreList[i] << endl;
    }
    
    free(scoreList);
    
    cout << "\nThank you for using the Score Management System!" << endl;
    return 0;
}
